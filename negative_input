8'b01110100 : mant_out[22:0] = ((mantissa >> 5'd9) ^ 23'b1111_1111_0111_1111_1111_111) & 23'b1111_1111_1111_1111_1111_111;
8'b01110011 : mant_out[22:0] = ((mantissa >> 5'd10) ^ 23'b1111_1111_1011_1111_1111_111) & 23'b1111_1111_1111_1111_1111_111;
8'b01110010 : mant_out[22:0] = ((mantissa >> 5'd11) ^ 23'b1111_1111_1101_1111_1111_111) & 23'b1111_1111_1111_1111_1111_111;
8'b01110001 : mant_out[22:0] = ((mantissa >> 5'd12) ^ 23'b1111_1111_1110_1111_1111_111) & 23'b1111_1111_1111_1111_1111_111;
8'b01110000 : mant_out[22:0] = ((mantissa >> 5'd13) ^ 23'b1111_1111_1111_0111_1111_111) & 23'b1111_1111_1111_1111_1111_111;
8'b01101111 : mant_out[22:0] = ((mantissa >> 5'd14) ^ 23'b1111_1111_1111_1011_1111_111) & 23'b1111_1111_1111_1111_1111_111;
8'b01101110 : mant_out[22:0] = ((mantissa >> 5'd15) ^ 23'b1111_1111_1111_1101_1111_111) & 23'b1111_1111_1111_1111_1111_111;
8'b01101101 : mant_out[22:0] = ((mantissa >> 5'd16) ^ 23'b1111_1111_1111_1110_1111_111) & 23'b1111_1111_1111_1111_1111_111;
8'b01101100 : mant_out[22:0] = ((mantissa >> 5'd17) ^ 23'b1111_1111_1111_1111_0111_111) & 23'b1111_1111_1111_1111_1111_111;
8'b01101011 : mant_out[22:0] = ((mantissa >> 5'd18) ^ 23'b1111_1111_1111_1111_1011_111) & 23'b1111_1111_1111_1111_1111_111;
8'b01101010 : mant_out[22:0] = ((mantissa >> 5'd19) ^ 23'b1111_1111_1111_1111_1101_111) & 23'b1111_1111_1111_1111_1111_111;
8'b01101001 : mant_out[22:0] = ((mantissa >> 5'd20) ^ 23'b1111_1111_1111_1111_1110_111) & 23'b1111_1111_1111_1111_1111_111;
8'b01101000 : mant_out[22:0] = ((mantissa >> 5'd21) ^ 23'b1111_1111_1111_1111_1111_011) & 23'b1111_1111_1111_1111_1111_111;
8'b01100111 : mant_out[22:0] = ((mantissa >> 5'd22) ^ 23'b1111_1111_1111_1111_1111_101) & 23'b1111_1111_1111_1111_1111_111;
8'b01100110 : mant_out[22:0] = ((mantissa >> 5'd23) ^ 23'b1111_1111_1111_1111_1111_110) & 23'b1111_1111_1111_1111_1111_111;

8'b01111101 : 
begin

casex (mantissa)

23'b0xxxxxxxxxxxxxxxxxxxxxx : 
begin
expo_out[7:0] = 8'b01111100;
