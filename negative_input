module neg_input_firsthalf(input [7:0] exponent, input sign, input [22:0] mantissa, output reg [7:0] expo_out, output reg sign_out, output reg [22:0] mant_out);

wire [7:0] new_expo;
assign new_expo[7:0] = exponent[7:0] - 8'b00000010;

always @ (*)
begin
expo_out[7:0] = 8'b01111101;
sign_out = 1'b0;

case (new_expo)
8'b01111100 : mant_out[22:0] = ((mantissa >> 5'd1) ^ 23'b0111_1111_1111_1111_1111_111) & 23'b1111_1111_1111_1111_1111_111;
8'b01111011 : mant_out[22:0] = ((mantissa >> 5'd2) ^ 23'b1011_1111_1111_1111_1111_111) & 23'b1111_1111_1111_1111_1111_111;
