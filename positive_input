module pos_input(input [7:0] exponent, input sign, input [22:0] mantissa, output reg [7:0] expo_out, output reg sign_out, output reg [22:0] mant_out);

always @ (*)
begin
expo_out[7:0] = 8'b01111110;
sign_out = 1'b0;
case (exponent)
8'b01111111 : mant_out[22:0] = ((mantissa >> 5'd1) ^ 23'b1000_0000_0000_0000_0000_000) & 23'b1111_1111_1111_1111_1111_111;
8'b01111110 : mant_out[22:0] = ((mantissa >> 5'd2) ^ 23'b0100_0000_0000_0000_0000_000) & 23'b1111_1111_1111_1111_1111_111;
8'b01111101 : mant_out[22:0] = ((mantissa >> 5'd3) ^ 23'b0010_0000_0000_0000_0000_000) & 23'b1111_1111_1111_1111_1111_111;
8'b01111100 : mant_out[22:0] = ((mantissa >> 5'd4) ^ 23'b0001_0000_0000_0000_0000_000) & 23'b1111_1111_1111_1111_1111_111;
8'b01111011 : mant_out[22:0] = ((mantissa >> 5'd5) ^ 23'b0000_1000_0000_0000_0000_000) & 23'b1111_1111_1111_1111_1111_111;
8'b01111010 : mant_out[22:0] = ((mantissa >> 5'd6) ^ 23'b0000_0100_0000_0000_0000_000) & 23'b1111_1111_1111_1111_1111_111;
8'b01111001 : mant_out[22:0] = ((mantissa >> 5'd7) ^ 23'b0000_0010_0000_0000_0000_000) & 23'b1111_1111_1111_1111_1111_111;
8'b01111000 : mant_out[22:0] = ((mantissa >> 5'd8) ^ 23'b0000_0001_0000_0000_0000_000) & 23'b1111_1111_1111_1111_1111_111;
8'b01110111 : mant_out[22:0] = ((mantissa >> 5'd9) ^ 23'b0000_0000_1000_0000_0000_000) & 23'b1111_1111_1111_1111_1111_111;
8'b01110110 : mant_out[22:0] = ((mantissa >> 5'd10) ^ 23'b0000_0000_0100_0000_0000_000) & 23'b1111_1111_1111_1111_1111_111;
8'b01110101 : mant_out[22:0] = ((mantissa >> 5'd11) ^ 23'b0000_0000_0010_0000_0000_000) & 23'b1111_1111_1111_1111_1111_111;
8'b01110100 : mant_out[22:0] = ((mantissa >> 5'd12) ^ 23'b0000_0000_0001_0000_0000_000) & 23'b1111_1111_1111_1111_1111_111;
8'b01110011 : mant_out[22:0] = ((mantissa >> 5'd13) ^ 23'b0000_0000_0000_1000_0000_000) & 23'b1111_1111_1111_1111_1111_111;
8'b01110010 : mant_out[22:0] = ((mantissa >> 5'd14) ^ 23'b0000_0000_0000_0100_0000_000) & 23'b1111_1111_1111_1111_1111_111;
8'b01110001 : mant_out[22:0] = ((mantissa >> 5'd15) ^ 23'b0000_0000_0000_0010_0000_000) & 23'b1111_1111_1111_1111_1111_111;
8'b01110000 : mant_out[22:0] = ((mantissa >> 5'd16) ^ 23'b0000_0000_0000_0001_0000_000) & 23'b1111_1111_1111_1111_1111_111;
8'b01101111 : mant_out[22:0] = ((mantissa >> 5'd17) ^ 23'b0000_0000_0000_0000_1000_000) & 23'b1111_1111_1111_1111_1111_111;
8'b01101110 : mant_out[22:0] = ((mantissa >> 5'd18) ^ 23'b0000_0000_0000_0000_0100_000) & 23'b1111_1111_1111_1111_1111_111;
8'b01101101 : mant_out[22:0] = ((mantissa >> 5'd19) ^ 23'b0000_0000_0000_0000_0010_000) & 23'b1111_1111_1111_1111_1111_111;
8'b01101100 : mant_out[22:0] = ((mantissa >> 5'd20) ^ 23'b0000_0000_0000_0000_0001_000) & 23'b1111_1111_1111_1111_1111_111;
8'b01101011 : mant_out[22:0] = ((mantissa >> 5'd21) ^ 23'b0000_0000_0000_0000_0000_100) & 23'b1111_1111_1111_1111_1111_111;
8'b01101010 : mant_out[22:0] = ((mantissa >> 5'd22) ^ 23'b0000_0000_0000_0000_0000_010) & 23'b1111_1111_1111_1111_1111_111;
8'b01101001 : mant_out[22:0] = ((mantissa >> 5'd23) ^ 23'b0000_0000_0000_0000_0000_001) & 23'b1111_1111_1111_1111_1111_111;
endcase
end
endmodule
